{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": ["src/**/*.ts"]
}
